.container
  .col-md-8.col-md-offset-2

    .row
      .col-xs-12.create-top
        .float-right.text-right
          = form_for @new_project, class: 'form-horizontal' do |f|
            = f.text_field :name, class: 'form-control top-input', placeholder: 'Create a new Project'
            = f.submit 'Create', class: 'btn btn-primary'

    %br
    %br
    - @projects.each do |project|
      .row.project
        .col-xs-3.title
          %h1= link_to project.name, project_path(project)
          %h2 Within budget

        .col-xs-3.time
          %h4 Time Logged
          %h2 25h
          / %h5 20h this week

        .col-xs-3.time
          %h4 Earned
