.new-timer
  %form{ "ng-submit" =>"logTime()", name: 'new_timer_form' }
    %input.small-12{ type: 'text', "ng-model" => "new_timer.activity", placeholder: 'Activity', "typeahead" => "a.name for a in activities | filter:$viewValue | limitTo: 8", "typeahead-template-url" => "activity_dropdown.html", autofocus: true }
    
    %input.small-12{ type: 'text', "ng-model" => "new_timer.project_name", "required" => "", "typeahead" => "p.name for p in projects | filter:$viewValue | limitTo: 8", placeholder: 'Project', "typeahead-template-url" => "project_dropdown.html" }
  
    %input.small-12{ type: 'text', "ng-model" => "new_timer.written_start_time", placeholder: 'Today' }
  
    %timer{ "interval" => "1000", "autostart" => "false" }
      %input.small-12{ type: 'text', "ng-model" => "new_timer.written_time", placeholder: 'e.g. 1h 22m', "required" => "" }
    %button.button.log-button.small-12{ "ng-disabled" => "new_timer_form.$invalid" }
      LOG TIME
    .small-12.column.clear-form{ "ng-click" => "new_timer = {}" }
      %a
        clear entire form
    / .large-6.medium-6.small-6.column
    /   %a.button{ "ng-click" => "toggleTimer()" }
    /     {{ start_value }}
