.new-timer-row
  %form{ "ng-submit" =>"logTime()" }
    .large-12.medium-12.small-12.columns
      %input{ type: 'text', "ng-model" => "new_timer.activity", placeholder: 'Activity', "typeahead" => "a.name for a in activities | filter:$viewValue | limitTo: 8", "typeahead-template-url" => "activity_dropdown.html" }
    .large-12.medium-12.small-12.columns
      %input{ type: 'text', "ng-model" => "new_timer.project_name", "required" => "", "typeahead" => "p.name for p in projects | filter:$viewValue | limitTo: 8", placeholder: 'Project', "typeahead-template-url" => "project_dropdown.html" }
    .large-6.medium-6.small-12.columns
      %input{ type: 'text', "ng-model" => "new_timer.written_start_time", placeholder: 'Today' }
    .large-6.medium-6.small-12.columns
      %timer{ "interval" => "1000", "autostart" => "false" }
        %input{ type: 'text', "ng-model" => "new_timer.written_time", placeholder: 'e.g. 1h 22m', "required" => "" }
    .large-6.medium-6.small-6.column.left
      %button.button
        Log
    .large-6.medium-6.small-6.column
      %a.button{ "ng-click" => "toggleTimer()" }
        {{ start_value }}
