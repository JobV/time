.new-timer-row
  %form{ "ng-submit" =>"logTime()" }
    .row
      .medium-10.column
        .medium-3.columns
          %input{ type: 'text', "ng-model" => "new_timer.activity", placeholder: 'Activity', "typeahead" => "a.name for a in activities | limitTo: 8"}
        .medium-3.columns
          %input{ type: 'text', "ng-model" => "new_timer.written_start_time", placeholder: 'Today' }
        .medium-3.columns
          %input{ type: 'text', "ng-model" => "new_timer.project_name", "required" => "", "typeahead" => "p.name for p in projects | filter:$viewValue | limitTo: 8", placeholder: 'Project' }
        .medium-3.columns
          %input{ type: 'text', "ng-model" => "new_timer.written_time", placeholder: 'e.g. 1h 22m', "required" => "" }
      .medium-1.column.left
        %button.log-button
          Log
