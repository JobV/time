.timer-list
  .today{ "ng-show" => "timers_of_today[0]" }
    %h3.date-title Today
    .timers{ "ng-repeat" => "timer in timers_of_today | orderBy:'created_at':true" }  
      = render 'listed_timer'

  .yesterday{ "ng-show" => "timers_of_yesterday[0]" }
    %h3.date-title Yesterday
    .timers{ "ng-repeat" => "timer in timers_of_yesterday | orderBy:'created_at':true" }
      = render 'listed_timer'

  .this-week{ "ng-show" => "timers_of_this_week[0]" }
    %h3.date-title This week
    .timers{ "ng-repeat" => "timer in timers_of_this_week | orderBy:'created_at':true" }
      = render 'listed_timer'

