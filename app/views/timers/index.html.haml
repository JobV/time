%div{ "ng-controller" => "TimerCtrl" }
  .ui.one.column.stackable.center.aligned.grid
    .column
      %h1.top-timer
        %timer{ "interval" => "1000", "autostart" => "false", "ng-model" => "timer.data" }
          {{hours}}h {{minutes}}m {{seconds}}s

      %div{ class: "", "ng-click" => "toggleTimer()", "ng-class" => "startClass" }
        {{startValue}}


  %br
  %br
  .ui.stackable.grid
    .three.wide.column
    .ten.wide.column
      .row
        %table{class: "ui basic table segment"}
          %thead
            %th Date
            %th ID
            %th State
            %th Buttons
          %tbody
            %tr{"ng-repeat" => "timer in timers", enter: "active", "leave" => "", class: 'timer-row'}
              %td {{ timer.created_at | date:'mediumTime' }}
              %td {{ timer.id }}
              %td {{ timer.end_time | date:'mediumTime' }}
              %td
                %div{ class: "ui tiny basic button", "ng-click" => "deleteTimer($index)" }
                  Delete
                %div{ class: "ui tiny basic button", "ng-click" => "stopTimer($index)" }
                  Stop
