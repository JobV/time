    .timer-box
      %timer{ "interval" => "1000", "autostart" => "true", "ng-model" => "timer.data" }
        %button.start-button{ "ng-click" => "toggleTimer()" }
          Start
        
        {{ hours }}:{{ minutes }}:{{ seconds }}


    .timer-list
      %h1.date-title Today
      .timers{ "ng-repeat" => "timer in timers" }  
        .timer-n
          {{ timer.created_at | date:'H:m' }} on {{ timer.project.name }} for JAXONS
          .money
            â‚¬ 460
          %i.icon-trash{ "ng-click" => "deleteTimer($index)"}

        %pre {{ timer | json }}

  
