.row
  .col-md-4
  .col-md-4.login
    = devise_error_messages!
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      .form-group
        = f.email_field :email, class: "form-control input-lg", placeholder: "Email"

      .form-group
        = f.password_field :password, class: "form-control input-lg", placeholder: "Password"
        
      .form-group
        = f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "Confirm password"
      %div= f.submit "Sign up", class: 'btn btn-success btn-lg btn-block'
    / = render "devise/shared/links"
